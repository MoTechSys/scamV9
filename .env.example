# =============================================================================
# S-ACM (Smart Academic Content Management) - Environment Variables
# =============================================================================
# Copy this file to .env and modify values according to your environment
# انسخ هذا الملف إلى .env وقم بتعديل القيم حسب بيئتك
# =============================================================================

# -----------------------------------------------------------------------------
# Django Core Settings
# -----------------------------------------------------------------------------
# Generate a new key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-CHANGE-THIS-IN-PRODUCTION
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,[::1]

# CSRF Trusted Origins (add your domain)
CSRF_TRUSTED_ORIGINS=https://yourdomain.com

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# Set USE_POSTGRES=True to switch from SQLite to PostgreSQL
USE_POSTGRES=False

# PostgreSQL settings (required only if USE_POSTGRES=True)
DB_NAME=s_acm_db
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_HOST=localhost
DB_PORT=5432
# DATABASE_URL=postgresql://user:password@host:port/dbname

# -----------------------------------------------------------------------------
# Supabase Storage (S3-Compatible) - Optional
# -----------------------------------------------------------------------------
SUPABASE_S3_BUCKET=media
SUPABASE_S3_REGION=ap-south-1
SUPABASE_S3_ENDPOINT=https://your-project.supabase.co/storage/v1/s3
SUPABASE_S3_ACCESS_KEY=placeholder_access_key
SUPABASE_S3_SECRET_KEY=placeholder_secret_key

# -----------------------------------------------------------------------------
# Supabase Public API - Optional
# -----------------------------------------------------------------------------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here

# -----------------------------------------------------------------------------
# Email Configuration (SMTP)
# -----------------------------------------------------------------------------
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_specific_password

# -----------------------------------------------------------------------------
# Manus API Proxy (OpenAI-compatible) - AI Features
# -----------------------------------------------------------------------------
# Get your key from: https://manus.im
MANUS_API_KEY=sk-your-manus-api-key-here
MANUS_BASE_URL=https://api.manus.im/api/llm-proxy/v1
AI_MODEL_NAME=gpt-4.1-mini
AI_RATE_LIMIT_PER_HOUR=9999

# -----------------------------------------------------------------------------
# Railway / Production Settings
# -----------------------------------------------------------------------------
PORT=8000

# -----------------------------------------------------------------------------
# Security Settings (Production Only - uncomment for production)
# -----------------------------------------------------------------------------
# SECURE_SSL_REDIRECT=True
# CSRF_COOKIE_SECURE=True
# SESSION_COOKIE_SECURE=True
